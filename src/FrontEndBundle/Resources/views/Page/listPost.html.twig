{% extends "FrontEndBundle::baseFront.html.twig" %}

{% block title %}FrontEndBundle:Page:contact{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">


                <div class="col-md-8 col-lg-8 blocPost">
                    <!-- First Blog Post -->
                    {% for post in allPosts %}
                    <h4>
                        <a href="#">{{ post.getTitle() }}</a>
                    </h4>
                    <p class="lead">
                        by <a href="index.php">{{ post.getAuthor() }}</a>
                    </p>
                    <p class="datePost"><span class="glyphicon glyphicon-time"></span> Posted on </p>
                    <hr>
                    <img class="img-responsive" src="http://placehold.it/900x300" alt="">
                    <hr>
                    <p class="textPreview">{{ post.getBody() }}</p>
                    <a class="btn btn-primary" href="#">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
                    <hr>
                    {% endfor %}
                </div>


            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <div class="input-group">
                        <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                                <span class="glyphicon glyphicon-search"></span>
                        </button>
                        </span>
                    </div>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                {% for category in allCategory %}
                                <li><a href="#">{{ category.getDisplayName() }}</a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>

            </div>
        </div>

    </div>

{% endblock %}