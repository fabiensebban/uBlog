{% extends 'FrontEndBundle::baseFront.html.twig' %}

{% block body %}

    <!-- Blogs Grid Section -->

    {# TODO : While on all categories and all blogs #}
    {% for category in categories %}
        <section id="{{ category.nameId }}">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2>{{ category.displayName }}</h2>
                        <hr class="star-primary">
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="carousel slide multi-item-carousel" id="theCarousel">
                            <div class="carousel-inner">
                                <!-- All posts-->

                            {# TODO : While on categorie's posts #}
                            {% for post in category.posts %}
                                <div class="item active">
                                    <div class="col-xs-4">
                                        <a href="{{ absolute_url(path('show_post', {'id' : post.id, 'slug' : post.slug})) }}">
                                            <img src="{# TODO: Image URL #}" class="img-responsive">
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                            </div>
                            <a class="left carousel-control" href="#theCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
                            <a class="right carousel-control" href="#theCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endfor %}
{% endblock %}