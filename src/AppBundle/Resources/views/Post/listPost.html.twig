{% extends "AppBundle::baseFront.html.twig" %}

{% block title %}AppBundle:Page:contact{% endblock %}

{% block body %}

    <div class="container">

        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>{{ category[0].displayName }}</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">

            <div class="col-md-8 col-lg-8 blocPost">
                <!-- First Blog Post -->
                {% for post in allPosts %}
                    <h4>
                        <a href="#" style="text-decoration: none; cursor: default;">{{ post.getTitle() }}</a>
                    </h4>
                    <p class="lead">
                        {{ 'by'|trans }} <a href="#" style="text-decoration: none; cursor: default;">{{ post.getAuthor() }}</a>
                    </p>
                    <p class="datePost"><span class="glyphicon glyphicon-time"></span> {{ 'postedOn'|trans }} {{ post.getUpdated()|date('d-m-Y H:i:s') }} </p>
                    <hr>
                    <img src="{{ asset(images_dir) }}{{post.image.fileName}}" class="img-responsive">
                    <hr>
                    <p class="textPreview">{{ post.getBody() | striptags | slice(0, 250) }} [...]</p>
                    <a class="btn btn-primary" href="{{ absolute_url(path('show_post', {'id' : post.id, 'slug' : post.slug})) }}">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
                    <hr>
                {% endfor %}
            </div>

            <div class="col-md-4">
                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                {% for category in allCategory %}
                                    <li><a href="#">{{ category.getDisplayName() }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>

            </div>
        </div>

    </div>

{% endblock %}