{% extends "AppBundle::baseFront.html.twig" %}

{% block title %}AppBundle:Page:contact{% endblock %}

{% block body %}

    <div class="container">

        {# Flashbag container #}
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="msg-container">
                    {% if app.session.flashBag.has('success') %}
                    <div class="alert alert-success">
                        {% for msg in app.session.flashBag.get('success') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                    {% elseif app.session.flashBag.has('danger') %}
                    <div class="alert alert-danger">
                        {% for msg in app.session.flashBag.get('danger') %}
                            {{ msg }}
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-md-8 col-lg-8 blocPost">
                <!-- First Blog Post -->
                <h4>
                    <a href="/app_dev.php/details/{{ post.getId() }}">{{ post.getTitle() }}</a>
                </h4>
                <p class="lead">
                    {{ 'by'|trans }} <a href="index.php">{{ post.getAuthor() }}</a>
                </p>
                <p class="datePost"><span class="glyphicon glyphicon-time"></span> {{ 'postedOn'|trans }} {{ post.getUpdated()|date('d-m-Y H:i:s') }} </p>
                <hr>
                <img class="img-responsive" src="{{ asset(images_dir) }}{{post.image.fileName}}" alt="{{ post.title }}" >
                <hr>
                <p class="textPreview">{{ post.getBody()}}</p>
                <hr>
                <h4><a>Comments :</a></h4>
                <hr>
                <div class="comments-block">
                    {% if comments %}
                        {% for cmt in comments %}
                        <div class="panel panel-white post panel-shadow">
                            <div class="post-heading">
                                <div class="pull-left image">
                                    <img src="http://www.iconsfind.com/wp-content/uploads/2015/08/20150831_55e46ad551392.png" class="img-circle avatar" alt="user profile image">
                                </div>
                                <div class="pull-left meta">
                                    <div class="title h5">
                                        <a href="#"><b>{{ cmt.author.lastname }} {{ cmt.author.firstname }}</b></a>
                                    </div>
                                    <h6 class="text-muted time">{{ cmt.created|date('d-m-Y H:i:s')}}</h6>
                                </div>
                            </div> 
                            <div class="post-description"> 
                                <p>{{ cmt.content }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    {% else %}
                        <h5>No comment !</h5>
                    {% endif %}
                    <hr>
                        <h4><a>Leave a comment :</a></h4>
                    <hr>
                    {% if app.user %}
                        
                        <form action="{{path('comment_add')}}" method="POST">
                            <textarea class="form-control" rows="5" name="cmt_content"></textarea>
                            <input type="hidden" name="post_id" value="{{ post.id }}">
                            <button class="btn btn-default bo-primary-btn text-uppercase pull-right" type="submit" name="add">
                                <span class="glyphicon glyphicon-send" aria-hidden="true"></span> Send
                            </button>
                        </form>
                    {% else %}
                    # user is not logged in
                    {% endif %}
                </div>
            </div>

            <div class="col-md-4">
                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>{{ 'blogCategories'|trans }}</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                {% for category in allCategories %}
                                    <li><a href="#">{{ category.getDisplayName() }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}