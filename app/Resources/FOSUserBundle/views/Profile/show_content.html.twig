{% trans_default_domain 'FOSUserBundle' %}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>uBlog - The blog for U</title>

    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('frontEnd/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

    <!--Import Google Icon Font-->
    <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Materialize Core CSS-->
    <!-- <link href="{{ asset('frontEnd/vendor/materialize/css/materialize.min.css') }}" rel="stylesheet"> -->

    <!-- Theme CSS -->
    <link href="{{ asset('frontEnd/css/freelancer.css') }}" rel="stylesheet">
    <link href="{{ asset('frontEnd/css/styleFrontEnd.css') }}" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="{{ asset('frontEnd/vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top" class="index">

<!-- Navigation -->
<nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand" href="{{ path('home') }}">{{ 'headerTitle'|trans }}</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">

                <li>
                    <a href="{{ path('about') }}">{{ 'profile.show.about'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('contact') }}">{{ 'profile.show.contact'|trans }}</a>
                </li>

                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}" class="btnLogout">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_profile_show') }}">{{ 'profile.show.my_profil'|trans }}</a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>

<!-- Header -->
<header>
    {%  block header %} {% endblock %}
</header>
<div class="container-fluid containerBlocBody">

    <h1 class="profileTitle">{{ 'profile.show.my_profil'|trans }}</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="thumbnail">
                <div class="caption text-center">
                    <img class="img-responsive img-cover" src="{{ asset('frontEnd/images/profil.png') }}" alt="" style="margin: auto;">
                    <h3>{{ 'profile.show.username'|trans }}: {{ user.username }}</h3>
                    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
                    <p><a href="{{ path('backoffice') }}" class="btn btn-primary" role="button">{{ 'profile.show.go_to_bo'|trans }}</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="quick-access-buttons">
    <div class="user-profile-btn">
        <a href="{{ path('fos_user_profile_show') }}">
            <i class="material-icons">perm_identity</i>
        </a>
    </div>
    {% if is_granted("ROLE_ADMIN") %}
        <div class="backoffice-btn">
            <a href="{{ path('backoffice') }}">
                <i class="material-icons">settings</i>
            </a>
        </div>
    {% endif %}
</div>
